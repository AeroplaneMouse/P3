<Page x:Class="Asset_Management_System.Views.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Asset_Management_System"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    ShowsNavigationUI="False"
    Title="SplashPage"
    
>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--<Path Stroke="Black" StrokeThickness="10" Data="M13.0612946,78.5539627 L5.75334225,78.5539627 C2.58017371,78.5539627 0,75.9749715 0,72.7936247 L0,5.76033797 C0,2.58010232 2.57585906,0 5.75334225,0 L90.2466578,0 C93.4198263,0 96,2.57899115 96,5.76033797 L96,72.7936247 C96,75.9738604 93.4241409,78.5539627 90.2466578,78.5539627 L28.5451465,78.5539627 C25.2869782,96 10.4598214,96.0000006 10.4598214,96 C10.4598214,95.9999995 16.0593495,85.8092728 13.0612946,78.5539627 Z"/>-->
        
        <!--<Image Source="{StaticResource ApplicationIcon}" Margin="30"/>-->
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            TextBlock.FontSize="{StaticResource FontSizeXLarge}"
            Content="{Binding LoadingText}"/>


        <StackPanel Grid.Row="2">
            <TextBlock 
                Text="{Binding CurrentActionText}"
                HorizontalAlignment="Center"
                FontSize="{StaticResource FontSizeRegular}"/>
            
            <TextBlock
                Text="{Binding AdditionalText}"
                HorizontalAlignment="Center"
                FontSize="{StaticResource FontSizeSmall}"/>
        </StackPanel>

        <Button
            Grid.Row="2"
            Style="{StaticResource RegularButton}"
            Width="Auto"
            Margin="10"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Content="Load config file"
            Command="{Binding LoadConfigCommand}"
            IsEnabled="False"
        />
    </Grid>
</Page>
