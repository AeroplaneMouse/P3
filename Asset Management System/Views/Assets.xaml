<Page x:Class="Asset_Management_System.Views.Assets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Asset_Management_System.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    ShowsNavigationUI="False"
    Title="Assets"
>
    <Page.Resources>
        <!-- Style of the page -->
        <Style TargetType="{x:Type local:Assets}">
            <Setter Property="Template">
                <Setter.Value>
                    <!-- Overrides the standard template for Page, giving a "blank slate" -->
                    <ControlTemplate TargetType="{x:Type Page}">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="{Binding TitleHeightGridLength}"/>
                                <RowDefinition Height="{Binding TitleHeightGridLength}"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Assets"
                                       TextBlock.FontSize="{StaticResource FontSizeLarge}"
                                       Padding="9"/>
                            <Button Content="Add asset" Style="{StaticResource RegularButton}" HorizontalAlignment="Right"/>


                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBox VerticalAlignment="Center"
                                         MinWidth="230"
                                         Text="{Binding SearchQueryText, UpdateSourceTrigger=PropertyChanged}"
                                         TextBlock.FontSize="{StaticResource FontSizeRegular}"/>

                                <Button Grid.Column="1"
                                        Margin="10, 0, 0, 0"
                                        Content="Search"
                                        Command="{Binding SearchAssetsCommand}"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource RegularButton}"
                                        TextBlock.FontSize="{StaticResource FontSizeRegular}"/>
                            </StackPanel>

                            <ListView Grid.Row="2" ItemsSource="{Binding Assets}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=DepartmentID}" Header="Department ID"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Header="Description"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

