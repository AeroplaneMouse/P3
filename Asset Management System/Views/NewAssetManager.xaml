    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TitleStyle}"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0">Add asset</TextBlock>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            <Button Style="{StaticResource RegularAcceptButton}"
                    Command="{Binding SaveAssetCommand}"
                    Content="Save"/>

            <Button
                Style="{StaticResource RegularCancelButton}"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                Margin="10 0, 0, 0"
                />
        </StackPanel>

        <Separator VerticalAlignment="Bottom"
                   Background="Gray" 
                   Margin="10, 0, 10, 0"/>


        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Width="240"
                        Margin="10"
                        HorizontalAlignment="Left">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" 
                                   FontSize="{StaticResource FontSizeRegular}"
                                   Margin="0, 0, 0, 10">Details</TextBlock>

                        <TextBlock Text="Name"/>
                        <TextBox Style="{StaticResource BoxFieldStyle}"/>

                        <TextBlock Text="Identifier"/>
                        <TextBox Style="{StaticResource BoxFieldStyle}"/>

                        <TextBlock Text="Description"/>
                        <TextBox Style="{StaticResource BoxFieldStyle}" 
                                 TextWrapping="Wrap" 
                                 MinHeight="80" 
                                 AcceptsReturn="True" 
                                 AcceptsTab="True" 
                                 SpellCheck.IsEnabled="True"/>

                        <TextBlock Text="Tag"/>
                        <TextBox Style="{StaticResource BoxFieldStyle}"
                                 />
                        <Button Content="Add field test"
                                Command="{Binding AddFieldTestCommand}"/>
                        <Button Content="Add field test 2"
                                Command="{Binding AddFieldTest2Command}"/>
                    </StackPanel>
                </Border>

                <Rectangle Grid.Column="1"
                            Margin="10, 10, 10, 10"
                            Fill="Black"
                            Width=".3"
                            StrokeThickness="0"
                            Opacity="1"/>

                <Border Grid.Column="2"
                        Width="240"
                        HorizontalAlignment="Left"
                        Margin="10">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" 
                                   FontSize="{StaticResource FontSizeRegular}"
                                   Margin="0, 0, 0 10">Fields</TextBlock>
                        <ComboBox Style="{StaticResource FieldComboBox}">
                            
                        </ComboBox>
                        <ListView Style="{StaticResource FieldContainer}">

                        </ListView>
                        
                    </StackPanel>
                </Border>

            </Grid>

        </ScrollViewer>


