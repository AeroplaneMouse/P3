<Page x:Class="Asset_Management_System.Views.Prompts.CustomField"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Asset_Management_System.Views.Prompts"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomField">
    <Page.Resources>
        <DataTemplate x:Key="Area">
            <TextBox Style="{StaticResource ParagraphTextBox}"
                AcceptsReturn="True"
                AcceptsTab="True"
                MinHeight="70"
                Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}"/>
        </DataTemplate>

        <DataTemplate x:Key="Box">
            <TextBox Style="{StaticResource ParagraphTextBox}"
                Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}"/>
        </DataTemplate>
        
        <Style TargetType="ContentPresenter" x:Key="DefaultValueStyle">
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="ContentTemplate" Value="{StaticResource Area}"/>
            
            <Style.Triggers>
                <DataTrigger Binding="{Binding DefaultViewStyle}" Value="0">
                    <Setter Property="ContentTemplate" Value="{StaticResource Area}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DefaultViewStyle, UpdateSourceTrigger=PropertyChanged}" Value="1">
                    <Setter Property="ContentTemplate" Value="{StaticResource Box}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding DefaultViewStyle, NotifyOnSourceUpdated=True}" Value="2">
                    <Setter Property="ContentTemplate" Value="{StaticResource Box}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Canvas Style="{StaticResource PromptBackground}"/>
        <Border Style="{StaticResource PromptBorder}"
                Width="400"
                Height="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="3 3 0 0"
                        Background="{StaticResource BackgroundDarkBrush}">
                    <Grid >
                        <TextBlock Text="Add new field"
                                   Style="{StaticResource TitleStyle}"
                                   Foreground="White"
                                   Margin="10 10 0 10"/>

                        <Button Style="{StaticResource RegularCancelButton}"
                                Width="Auto"
                                Foreground="White"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Command="{Binding CancelCommand}"
                                Content="X"
                                Margin="0 0 10 0"
                                FontWeight="Bold"/>
                    </Grid>
                </Border>
                
                <!-- Content -->
                <Grid Margin="10"
                      Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Style="{StaticResource ParagraphStyle}"
                                   Text="Field type:"/>
                        <ComboBox Margin="0 0 0 10"
                                  Name="FieldTypeSelector"
                                  ItemsSource="{Binding FieldTypes}"
                                  SelectedItem="{Binding SelectedFieldType, UpdateSourceTrigger=PropertyChanged}">
                        </ComboBox>

                        <TextBlock Style="{StaticResource ParagraphStyle}"
                                   Text="Field name:"/>
                        <TextBox Style="{StaticResource ParagraphTextBox}"
                                 Margin="0 0 0 10"
                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Default Value:"
                                   Style="{StaticResource ParagraphStyle}"/>

                        <ContentPresenter>
                            <ContentPresenter.Style>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Margin" Value="0 0 0 10"/>
                                    <Setter Property="ContentTemplate" Value="{StaticResource Box}"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DefaultViewStyle}" Value="0">
                                            <Setter Property="ContentTemplate" Value="{StaticResource Area}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DefaultViewStyle, UpdateSourceTrigger=PropertyChanged}" Value="1">
                                            <Setter Property="ContentTemplate" Value="{StaticResource Box}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DefaultViewStyle, NotifyOnSourceUpdated=True}" Value="2">
                                            <Setter Property="ContentTemplate" Value="{StaticResource Box}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentPresenter.Style>
                        </ContentPresenter>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Required: "
                                       Style="{StaticResource ParagraphStyle}"/>
                            <CheckBox IsChecked="{Binding IsRequired, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Style="{StaticResource RegularAcceptButton}"
                        Command="{Binding AcceptCommand}"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        Content="Add field"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
