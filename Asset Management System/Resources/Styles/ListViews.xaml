<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Asset_Management_System">



    <!-- Notification container -->
    <Style TargetType="ListView" x:Key="NotificationView">
        <Setter Property="ItemsSource" Value="{Binding ActiveNotifications}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border>
                        <StackPanel>
                            <ItemsPresenter/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Style for notification items -->
        <Style.Resources>
            <Style TargetType="ListViewItem">
                <Setter Property="Background" Value="{Binding Path=Background}"/>
                <Setter Property="Foreground" Value="{Binding Path=Foreground}"/>
                <Setter Property="Content" Value="{Binding Path=Message}"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>