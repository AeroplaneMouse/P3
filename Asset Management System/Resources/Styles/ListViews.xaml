<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:Asset_Management_System.ViewModels">
    
    <!-- Regular list -->
    <Style TargetType="ListView" x:Key="RegularList">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0 10 0 0" />
    </Style>
    
    <!-- Notification container -->
    <Style TargetType="ListView" x:Key="NotificationView">
        <Setter Property="ItemsSource" Value="{Binding ActiveNotifications}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <ItemsPresenter>
                        <ItemsPresenter.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Grid Background="{Binding Path=Background}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="{Binding Path=Message}"
                                                       FontSize="{TemplateBinding FontSize}"/>
                                                <Button Grid.Column="1"
                                                        Style="{StaticResource RemoveNotificationButton}"
                                                        Command="{x:Static v:MainViewModel.RemoveNotificationCommand}"
                                                        CommandParameter="{Binding Path=ID}">
                                                </Button>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ItemsPresenter.Resources>
                    </ItemsPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Field Listview -->
