<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- This shit doesn't work :(
    <system:Int32 x:Key="MenuNormalSpacingAll">15, 15</system:Int32>
    <system:String x:Key="MenuNormalSpacingSides">15, 0, 15, 0</system:String>
    <system:String x:Key="MenuNormalSpacingTop">0, 7, 0, 7</system:String>
    -->

    <!-- Horizontal separator -->
    <Style TargetType="Rectangle" x:Key="HorizontalSeparator">
        <Setter Property="Margin" Value="10 0 10 0"/>
        <Setter Property="Fill" Value="Gray"/>
        <Setter Property="Height" Value="1"/>
    </Style>

    <!-- Vertical separator -->
    <Style TargetType="Rectangle" x:Key="VerticalSeparator">
        <Setter Property="Margin" Value="0 10 0 10"/>
        <Setter Property="Fill" Value="Gray"/>
        <Setter Property="Width" Value="1"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="FieldSpacing">
        <Setter Property="Margin" Value="0 0 0 10"/>
    </Style>

</ResourceDictionary>