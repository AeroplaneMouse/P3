<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Asset_Management_System">

    <Page.Resources>
        <Style TargetType="Label" x:Key="Tag">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Grid>
                            <Rectangle Fill="{Binding Color}" RadiusX="10" RadiusY="10"/>
                            <ContentPresenter Margin="5" TextElement.Foreground="White"
                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Label Style="{StaticResource Tag}"
       Content="Hello World"/>
</Page>