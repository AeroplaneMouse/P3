<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Asset_Management_System"
                    xmlns:viewModels="clr-namespace:Asset_Management_System.ViewModels">
    <!-- List page -->
    <Style TargetType="Page" x:Key="ListPage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Page">
                    <Grid Margin="10">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Bottom" Margin="10">
                            <Button Style="{StaticResource RegularButton}"
                                    Content="Add new"
                                    Command="{Binding AddNewCommand}" />

                            <Button Style="{StaticResource RegularButton}"
                                    Content="Print"
                                    Command="{Binding PrintCommand}" />

                        </StackPanel>

                        <StackPanel Orientation="Horizontal" 
                                    Grid.Row="1" 
                                    VerticalAlignment="Bottom" 
                                    Margin="10">
                            
                            <TextBox Width="300"
                                     TextBlock.FontSize="12px"
                                     Padding="2,3,2,3"
                                     Text="{Binding SearchQueryText, UpdateSourceTrigger=PropertyChanged}" />

                            <Button Style="{StaticResource RegularButton}"
                                    Content="Search"
                                    Command="{Binding SearchCommand}" />

                            <Button Style="{StaticResource RegularButton}"
                                    Content="Edit"
                                    Command="{Binding EditCommand}" />

                            <Button Style="{StaticResource RegularButton}"
                                    Content="Remove"
                                    Command="{Binding RemoveCommand}" />

                            <Button Style="{StaticResource RegularButton}"
                                    Content="View History"
                                    Command="{Binding ViewLogCommand}" />

                        </StackPanel>

                        <Grid Grid.Row="3" Margin="10">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                <ListView ItemsSource="{Binding SearchList}" SelectedIndex="{Binding SelectedItemIndex, UpdateSourceTrigger=PropertyChanged}">
                                    
                                    <ListView.Resources>
                                        
                                        <GridView x:Key="AssetTemplate">
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Header="Description" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=DateToStringConverter}" Header="Created" />
                                        </GridView>
                                        
                                        <GridView x:Key="TagsTemplate">
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=DateToStringConverter}"
                                                            Header="Created" />
                                        </GridView>
                                        
                                    </ListView.Resources>
                                    
                                    <ListView.Style>
                                        <Style TargetType="ListView">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ViewType}" Value="1">
                                                    <Setter Property="View" Value="{StaticResource AssetTemplate}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="View" Value="{StaticResource TagsTemplate}" />
                                        </Style>
                                    </ListView.Style>
                                </ListView>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>