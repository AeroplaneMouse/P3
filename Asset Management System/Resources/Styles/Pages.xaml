<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Asset_Management_System"
                    xmlns:viewModels="clr-namespace:Asset_Management_System.ViewModels">
    
    
    
    <!-- List page -->
    <Style TargetType="Page" x:Key="ListPage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Page">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource TitleStyle}"
                                    VerticalAlignment="Center"
                                    Text="{Binding Title}"
                                    Margin="10 0 0 0"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="10">
                            <Button
                                Style="{StaticResource RegularAcceptButton}"
                                Command="{Binding AddNewCommand}"
                                Content="Add new"/>
                        </StackPanel>

                        <Rectangle Style="{StaticResource HorizontalSeparator}"
                                   VerticalAlignment="Bottom"/>

                        <!-- Content of list assets page -->
                        <Border Padding="10"
                                Grid.Row="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox FontSize="{StaticResource FontSizeSmall}"
                                         Text="{Binding SearchQueryText}"
                                         VerticalContentAlignment="Center"
                                         MinWidth="200"/>

                                <Button Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Margin="10 0 0 0"
                                    Content="Search"
                                    Style="{StaticResource RegularButton}"/>

                                <Button Grid.Column="1"
                                    Style="{StaticResource RegularCancelButton}"
                                    HorizontalAlignment="Right"
                                    Content="Remove"
                                    Visibility="{Binding IsRemoveVisible}"/>

                                <ListView Style="{StaticResource RegularList}"
                                      ItemsSource="{Binding SearchList}"
                                      Grid.Row="2"
                                      Margin="0 10 0 0"
                                      Grid.ColumnSpan="2">
                                    <ListView.Resources>
                                        <GridView x:Key="AssetTemplate">
                                            <GridViewColumn Width="20" Header="">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <CheckBox/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Identifier}" Header="Identifier" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=DateToStringConverter}" Header="Created" />
                                        </GridView>

                                        <GridView x:Key="TagsTemplate">
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=DateToStringConverter}" Header="Created" />
                                        </GridView>
                                    </ListView.Resources>
                                </ListView>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- *************************** -->
    <!-- Promt elements-->
    
    <!-- Promt background canvas -->
    <Style TargetType="Canvas" x:Key="PromtBackground">
        <Setter Property="Opacity" Value="0.34"/>
        <Setter Property="Background" Value="Black"/>
    </Style>
    
    <!-- Promt Grid -->
    <Style TargetType="Grid" x:Key="PromtGrid">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="160"/>
    </Style>
    
    <!-- Promt Border -->
    <Style TargetType="Border" x:Key="PromtBorder">
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    
    <!-- Display text -->
    <Style TargetType="TextBlock" x:Key="PromtDisplay" BasedOn="{StaticResource HeaderStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
        <Setter Property="MaxWidth" Value="270"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <!-- Input text -->
    <Style TargetType="TextBox" x:Key="PromtInput" BasedOn="{StaticResource BaseTextBoxStyle}">
        <Setter Property="Width" Value="216"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
    </Style>

    
