<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Asset_Management_System"
                    xmlns:viewModels="clr-namespace:Asset_Management_System.ViewModels">
    
    
    
    <!-- List page -->
    <Style TargetType="Page" x:Key="ListPage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Page">
                    <Grid Margin="10">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource TitleStyle}"
                                    VerticalAlignment="Center"
                                    Text="{Binding Title}"
                                    Margin="10 0 0 0"/>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Bottom" Margin="10">
                            <Button Style="{StaticResource RegularButton}"
                                    Content="Add new"
                                    Command="{Binding AddNewCommand}"
                                    Visibility="{Binding Visible}" />

                            <Button Style="{StaticResource RegularButton}"
                                    Content="Export"
                                    Command="{Binding PrintCommand}"
                                    Visibility="{Binding Visible}" />
                            
                            <Button Style="{StaticResource RegularButton}"
                                    Content="Edit"
                                    Command="{Binding EditCommand}"
                                    Visibility="{Binding Visible}" />
                            
                            <Rectangle Style="{StaticResource HorizontalSeparator}"
                                   VerticalAlignment="Bottom"/>
                        </StackPanel>
                        
                        <!-- Content of list assets page -->
                        <Border Padding="10"
                                Grid.Row="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox FontSize="{StaticResource FontSizeSmall}"
                                         Text="{Binding SearchQueryText}"
                                         VerticalContentAlignment="Center"
                                         MinWidth="200"/>

                                <Button Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Margin="10 0 0 0"
                                    Content="Search"
                                    Style="{StaticResource RegularButton}"
                                    Command="{Binding SearchCommand}"/>

                                <Button Grid.Column="1"
                                    Style="{StaticResource RegularCancelButton}"
                                    HorizontalAlignment="Right"
                                    Content="Remove"
                                    Visibility="{Binding IsRemoveVisible}"/>

                                
                                <!--Style="{StaticResource RegularList}"-->
                                <ListView 
                                      ItemsSource="{Binding SearchList}"
                                      Grid.Row="2"
                                      Margin="0 10 0 0"
                                      Grid.ColumnSpan="2"
                                      SelectedIndex="{Binding SelectedItemIndex}">
                                    <ListView.Resources>
                                        <GridView x:Key="AssetTemplate">
                                            <GridViewColumn>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <CheckBox/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Identifier}" Header="Identifier" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=DateToStringConverter}" Header="Created" />
                                        </GridView>

                                        <GridView x:Key="TagsTemplate">
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=DateToStringConverter}" Header="Created" />
                                        </GridView>
                                    </ListView.Resources>
                                    <ListView.InputBindings>
                                        <KeyBinding Key="Delete" Command="{Binding RemoveCommand}" />
                                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding EditCommand}"/>
                                    </ListView.InputBindings>

                                    <ListView.Style>
                                        <Style TargetType="ListView">
                                            <Setter Property="View" Value="{StaticResource TagsTemplate}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ViewType}" Value="1">
                                                    <Setter Property="View" Value="{StaticResource AssetTemplate}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.Style>
                                </ListView>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- *************************** -->
    <!-- Prompt elements-->
    
    <!-- Prompt background canvas -->
    <Style TargetType="Canvas" x:Key="PromptBackground">
        <Setter Property="Opacity" Value="0.34"/>
        <Setter Property="Background" Value="Black"/>
    </Style>
    
    <!-- Prompt Border -->
    <Style TargetType="Border" x:Key="PromptBorder">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="160"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    
    <!-- Display text -->
    <Style TargetType="TextBlock" x:Key="PromptDisplay" BasedOn="{StaticResource HeaderStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
        <Setter Property="MaxWidth" Value="270"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <!-- Input text -->
    <Style TargetType="TextBox" x:Key="PromptInput" BasedOn="{StaticResource BaseTextBoxStyle}">
        <Setter Property="Width" Value="216"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
    </Style>                              
                        
</ResourceDictionary>