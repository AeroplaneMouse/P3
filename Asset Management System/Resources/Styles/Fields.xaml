<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Asset_Management_System"
                    xmlns:views="clr-namespace:Asset_Management_System.Views">

    <views:FieldDesignSelector x:Key="MyFieldDesignSelector" />
    

    <!-- Label of a field -->
    <Style TargetType="TextBlock" x:Key="FieldLabel">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontFamily" Value="{StaticResource SegoeRegular}"/>
        <Setter Property="Text" Value="{Binding Label}"/>
    </Style>
    
    <Style TargetType="TextBox" x:Key="BoxFieldStyle">
        <Setter Property="Margin" Value="0, 0, 0, 10"/>
    </Style>

    <Style TargetType="ComboBox" x:Key="FieldComboBox">
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="Background" Value="{StaticResource BackgroundDarkBrush}"/>
    </Style>

    <DataTemplate x:Key="TextBoxFieldStyle">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource FieldLabel}"/>
            
            <TextBox Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Content}"
                     TextWrapping="Wrap"
                     MinHeight="80"/>
            <Button Style="{StaticResource DeleteFieldButton}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="StringFieldStyle">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource FieldLabel}"/>
            
            <TextBlock FontFamily="{StaticResource SegoeRegular}"
                       FontSize="{StaticResource FontSizeSmall}"
                       Grid.Row="1"
                       Text="{Binding Content}"/>

            <Button Style="{StaticResource DeleteFieldButton}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="IntegerFieldStyle">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource FieldLabel}"/>
            
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource DeleteFieldButton}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Label}" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Content}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="DateFieldStyle">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource FieldLabel}"/>
            
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource DeleteFieldButton}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Label}" />
            <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding Content}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="BooleanFieldStyle">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource FieldLabel}"/>
            
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource DeleteFieldButton}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Name}" />
            <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding Content}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>