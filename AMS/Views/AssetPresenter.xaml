<Page x:Class="AMS.Views.AssetPresenter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AssetPresenter">

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TitleStyle}"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0"
                   Text="{Binding PageTitle}" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            
            <Button Style="{StaticResource RegularButton}"
                    Command="{Binding Command}"
                    Content="Edit" />
            
            <Button Style="{StaticResource RegularCancelButton}"
                    Command="{Binding CancelCommand}"
                    Margin="10 0 0 0"
                    Content="Cancel" />
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Details">
                <Grid>
                    <!-- Content of the page -->
                    <ScrollViewer Grid.Row="1" Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="400" />
                            </Grid.ColumnDefinitions>

                            <!-- Details -->
                            <StackPanel Grid.Column="0">
                                <!-- Name -->
                                <TextBlock Style="{StaticResource HeaderStyle}"
                                           Text="Name" />
                                
                                <TextBlock Style="{StaticResource ParagraphStyle}"
                                           Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                           Margin="0 0 0 10" />
                                
                                <!-- Identifier -->
                                <TextBlock Style="{StaticResource HeaderStyle}"
                                           Text="Identifier"/>

                                <TextBlock Style="{StaticResource ParagraphStyle}"
                                           Text="{Binding Identifier}"
                                           Margin="0 0 0 10"/>
                                <!-- Desription -->
                                <TextBlock Style="{StaticResource HeaderStyle}"
                                           Text="Description"/>

                                <TextBlock Style="{StaticResource ParagraphStyle}"
                                           Text="{Binding Description}"
                                           Margin="0 0 0 10"/>

                                <!-- Tags -->
                                <TextBlock Style="{StaticResource HeaderStyle}"
                                           Text="Tags"/>
                                
                                <ListView ItemsSource="{Binding TagList}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ItemContainerStyle="{StaticResource ListViewWithTags}">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel
                                                Orientation="Horizontal"
                                                ItemHeight="40"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left"
                                                OverridesDefaultStyle="True"/>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Label Foreground="{Binding FontColor}" 
                                                       Content="{Binding Name}" 
                                                       Style="{StaticResource TagLabelOnlyShow}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>


                            </StackPanel>

                            <!-- Separator -->
                            <Rectangle Style="{StaticResource VerticalSeparator}"
                           Grid.Column="1"
                           Margin="10 0 10 0"/>

                            <!-- Fields -->
                            <StackPanel Grid.Column="2">
                                <StackPanel Orientation="Horizontal"
                                            Margin="0 0 0 10">
                                    <TextBlock Style="{StaticResource HeaderStyle}"
                                               Margin="0 0 10 0"
                                               Text="Fields"/>
                                </StackPanel>

                                <!-- The list of added fields -->
                                <ItemsControl ItemsSource="{Binding FieldList}"
                                              ItemTemplateSelector="{StaticResource MyFieldDesignSelector}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Comments" />
            <TabItem Header="Log" />
        </TabControl>
    </Grid>
</Page>
